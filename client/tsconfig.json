{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": false,
    "noEmit": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": true
  },
  "compileOnSave": true
}
